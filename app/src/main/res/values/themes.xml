<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CodeHub" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Background -->
        <item name="android:windowBackground">?android:attr/colorBackground</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/neutral_500</item>
        <item name="colorSecondaryVariant">@color/neutral_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Neutral color. -->
        <item name="colorSurface">@color/neutral_400</item>
        <item name="colorOnPrimarySurface">@color/neutral_500</item>
        <item name="android:textColorPrimary">@color/neutral_500</item>
        <item name="android:textColorSecondary">@color/light_500</item>
        <item name="android:colorBackground">@color/neutral_200</item>
        <item name="colorPrimarySurface">@color/white</item>
    </style>

